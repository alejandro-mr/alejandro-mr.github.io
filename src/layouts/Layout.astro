---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { content } = Astro.props;
const title = 'Alejandro Moreno';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,500;0,6..96,600;0,6..96,700;1,6..96,400;1,6..96,500;1,6..96,600;1,6..96,700&family=Lora:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet" />
    <title>{content.title}</title>
  </head>
  <body class="lg:container lg:mx-auto h-screen min-h-screen text-secondary font-plus-jakarta subpixel-antialiased px-4 md:px-6 pb-8 md:pb-10 bg-background_b bg-no-repeat bg-gradient-to-br from-background_t">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
